<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F0"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro Diario"
            android:textColor="#2E7D32"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvFechaHoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD/MM/AAAA"
            android:textColor="#555"
            android:layout_marginBottom="24dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <CheckBox
                    android:id="@+id/chkTransporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Usé transporte público, bicicleta o caminé."
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/chkImpresiones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. No realicé impresiones."
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/chkEnvases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. No utilicé envases descartables."
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/chkReciclaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Separé y reciclé materiales."
                    android:layout_marginBottom="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnGuardar"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Guardar"
                        android:backgroundTint="#2E7D32"
                        android:textColor="#FFF"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnCancelar"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Cancelar"
                        android:backgroundTint="#D32F2F"
                        android:textColor="#FFF"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>