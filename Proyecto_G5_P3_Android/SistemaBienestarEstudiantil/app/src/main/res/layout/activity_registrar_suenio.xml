<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Registro"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:layout_marginBottom="32dp"/>

    <EditText
        android:id="@+id/etHoraInicioSue単o"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Hora de acostarse"
        android:focusable="false"
        android:inputType="none"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etHoraFinSue単o"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Hora de despertar"
        android:focusable="false"
        android:inputType="none"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnGuardarSue単o"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:backgroundTint="#3F51B5"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnCancelarSue単o"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:backgroundTint="#E57373"/>
</LinearLayout>