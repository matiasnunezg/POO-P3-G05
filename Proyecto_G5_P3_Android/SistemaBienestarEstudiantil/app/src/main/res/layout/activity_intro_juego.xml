<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingBottom="45dp"
    android:paddingTop="1dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:text="Juego de Memoria"
        android:textColor="#1B5E20"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edición Sostenibilidad"
        android:textColor="#2E7D32"
        android:textSize="20sp"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="♻️"
        android:textSize="100sp"
        android:gravity="center"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instrucciones:"
        android:textColor="#1B5E20"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Encuentra los pares de conceptos sostenibles.\n2. Tienes intentos ilimitados, pero trata de hacerlo en el menor tiempo posible.\n3. Aprende sobre el cuidado del medio ambiente mientras juegas."
        android:textColor="#333333"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/btnIniciarJuego"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#2E7D32"
        android:text="INICIAR JUEGO"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnVolverMenu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#607D8B"
        android:text="Volver al Menú"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>