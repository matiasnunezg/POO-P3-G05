<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ©cnica Pomodoro"
                android:textColor="#2E4091"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNombreTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Actividad: Cargando..."
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnTime25"
                    android:layout_width="65dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_pill_selected"
                    android:gravity="center"
                    android:text="25 min"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnTime5"
                    android:layout_width="65dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_pill_unselected"
                    android:gravity="center"
                    android:text="5 seg"
                    android:textColor="#2E4091"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/btnTime15"
                    android:layout_width="65dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_pill_unselected"
                    android:gravity="center"
                    android:text="15 min"
                    android:textColor="#2E4091"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtCronometro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="25:00"
                android:textColor="#2E4091"
                android:textSize="80sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btnIniciar"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#5CB85C"
                    android:padding="0dp"
                    android:text="Iniciar"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/btnPausar"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#F0AD4E"
                    android:padding="0dp"
                    android:text="Pausar"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/btnAccionFinal"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:backgroundTint="#D9534F"
                    android:padding="0dp"
                    android:text="Reiniciar"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:cornerRadius="16dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>