<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistema de Bienestar Estudiantil"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"/>

        <Button
            android:id="@+id/btnActividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Gestión de Actividades" />

        <Button
            android:id="@+id/btnEnfoque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Técnicas de Enfoque" />

        <Button
            android:id="@+id/btnHidratacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Control de Hidratación" />

        <Button
            android:id="@+id/btnSuenio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Registrar Horas de Sueño" />

        <Button
            android:id="@+id/btnSostenibilidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Registro Diario de Sostenibilidad" />

        <Button
            android:id="@+id/btnJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Juego de Memoria" />

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7. Salir" />

    </LinearLayout>
</ScrollView>
